# Example Environment Variables for PV Circularity Simulator
# Copy this file to .env and update with your actual values

# Database Configuration
APP_DATABASE_HOST=localhost
APP_DATABASE_PORT=5432
APP_DATABASE_USERNAME=pv_user
APP_DATABASE_PASSWORD=your_secure_password
APP_DATABASE_DATABASE=pv_circularity

# API Configuration
APP_API_HOST=0.0.0.0
APP_API_PORT=8080
APP_API_DEBUG=true

# Security
APP_SECURITY_AUTHENTICATION_SECRET_KEY=your_jwt_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# External Services
WEATHER_API_KEY=your_weather_api_key_here

# Environment
APP_ENVIRONMENT=development

# Logging
APP_LOGGING_LEVEL=INFO
APP_LOGGING_FILE=/var/log/pv-circularity/app.log

# Cache
APP_CACHE_ENABLED=true
APP_CACHE_BACKEND=redis
APP_CACHE_HOST=localhost
APP_CACHE_PORT=6379

# Feature Flags
APP_FEATURES_EXPERIMENTAL_MODELS=false
APP_FEATURES_ADVANCED_ANALYTICS=true
APP_FEATURES_ML_PREDICTIONS=true
