# PV Circularity Simulator - Environment Configuration

# Weather API Keys
NSRDB_API_KEY=your_nrel_nsrdb_api_key_here
PVGIS_API_KEY=  # PVGIS doesn't require API key for basic usage
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./pv_simulator.db
# For PostgreSQL: postgresql://user:password@localhost:5432/pv_simulator

# Default Location Settings
DEFAULT_LATITUDE=39.7392
DEFAULT_LONGITUDE=-104.9903
DEFAULT_ELEVATION=1609.0
DEFAULT_TIMEZONE=America/Denver

# API Rate Limiting
MAX_API_RETRIES=3
API_TIMEOUT_SECONDS=30

# TMY Data Cache
TMY_CACHE_DIR=./data/tmy_cache
WEATHER_DATA_DIR=./data/weather

# Application Settings
DEBUG=False
LOG_LEVEL=INFO

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
