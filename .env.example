# Weather API Keys
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here
VISUALCROSSING_API_KEY=your_visualcrossing_api_key_here
METEOMATICS_USERNAME=your_meteomatics_username_here
METEOMATICS_PASSWORD=your_meteomatics_password_here
TOMORROW_IO_API_KEY=your_tomorrow_io_api_key_here
NREL_API_KEY=your_nrel_api_key_here

# Cache Configuration
CACHE_TYPE=sqlite  # Options: sqlite, redis, memory
CACHE_TTL=3600  # Cache time-to-live in seconds (1 hour default)
REDIS_URL=redis://localhost:6379/0  # Only needed if CACHE_TYPE=redis

# API Rate Limiting (requests per minute)
OPENWEATHERMAP_RATE_LIMIT=60
VISUALCROSSING_RATE_LIMIT=1000
METEOMATICS_RATE_LIMIT=50
TOMORROW_IO_RATE_LIMIT=25
NREL_RATE_LIMIT=1000

# Database
DATABASE_URL=sqlite:///./pv_simulator.db

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Application Settings
DEFAULT_TIMEZONE=UTC
TEMPERATURE_UNIT=celsius  # Options: celsius, fahrenheit, kelvin
IRRADIANCE_UNIT=w_per_m2  # Options: w_per_m2, kw_per_m2
WIND_SPEED_UNIT=m_per_s  # Options: m_per_s, km_per_h, mph

# Data Quality
OUTLIER_DETECTION_ENABLED=true
GAP_FILLING_ENABLED=true
MAX_GAP_HOURS=3  # Maximum gap to fill in hours

# UI Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
