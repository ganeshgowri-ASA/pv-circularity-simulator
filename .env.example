# PV Circularity Simulator - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="PV Circularity Simulator"
APP_VERSION="0.1.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true

# =============================================================================
# Database Settings (PostgreSQL/TimescaleDB)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pv_circularity
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_SSL_ENABLED=false

# =============================================================================
# InfluxDB Settings (Time-series Database)
# =============================================================================
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=your_influxdb_token
INFLUX_ORG=pv-circularity
INFLUX_BUCKET=monitoring
INFLUX_BATCH_SIZE=1000
INFLUX_RETENTION_HOURS=2160

# =============================================================================
# Redis Settings (Caching & Pub/Sub)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50
REDIS_DEFAULT_TTL=300

# =============================================================================
# MQTT Settings
# =============================================================================
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=pv/
MQTT_QOS=1
MQTT_KEEPALIVE=60

# =============================================================================
# Modbus Settings
# =============================================================================
MODBUS_TCP_HOST=localhost
MODBUS_TCP_PORT=502
MODBUS_RTU_PORT=/dev/ttyUSB0
MODBUS_RTU_BAUDRATE=9600
MODBUS_POLL_INTERVAL=5

# =============================================================================
# WebSocket Settings
# =============================================================================
WS_HOST=0.0.0.0
WS_PORT=8765
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30

# =============================================================================
# Monitoring Settings
# =============================================================================
MONITOR_INVERTER_SAMPLING_INTERVAL=5
MONITOR_STRING_SAMPLING_INTERVAL=60
MONITOR_MODULE_SAMPLING_INTERVAL=300
MONITOR_UNDERPERFORMANCE_THRESHOLD_PCT=80.0
MONITOR_TEMPERATURE_ALERT_THRESHOLD_C=85.0
MONITOR_GRID_FREQUENCY_MIN_HZ=49.5
MONITOR_GRID_FREQUENCY_MAX_HZ=50.5

# =============================================================================
# API Settings
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_CORS_ORIGINS=["*"]
API_AUTH_ENABLED=false
API_JWT_SECRET=change-me-in-production

# =============================================================================
# Streamlit Settings
# =============================================================================
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501
STREAMLIT_REFRESH_INTERVAL_SEC=5

# =============================================================================
# Logging Settings
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/app.log
LOG_CONSOLE_ENABLED=true

# =============================================================================
# Site Configuration
# =============================================================================
SITE_ID=SITE001
SITE_CAPACITY_KW=1000.0
SITE_TIMEZONE=UTC
