# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development  # development, staging, production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pv_circularity
DB_USER=pv_user
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# TimescaleDB Configuration (if using TimescaleDB)
TIMESCALE_ENABLED=true

# InfluxDB Configuration (alternative/additional time-series database)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ORG=pv_circularity
INFLUXDB_BUCKET=monitoring_data

# MQTT Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TLS_ENABLED=false

# Modbus Configuration
MODBUS_TIMEOUT=10
MODBUS_RETRIES=3

# OPC UA Configuration
OPCUA_TIMEOUT=10
OPCUA_SECURITY_POLICY=None  # None, Basic256Sha256, etc.

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, console
LOG_FILE_PATH=logs/pv_circularity.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Real-time Monitoring
MONITORING_INTERVAL_SECONDS=5
DATA_BUFFER_SIZE=1000
ALERT_CHECK_INTERVAL_SECONDS=30

# Performance Thresholds
PERFORMANCE_RATIO_THRESHOLD=0.75
AVAILABILITY_THRESHOLD=0.95
UNDERPERFORMANCE_THRESHOLD_PERCENT=15

# WebSocket Configuration
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8765

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Prometheus Metrics
PROMETHEUS_PORT=9090
PROMETHEUS_ENABLED=true

# Data Retention (days)
DATA_RETENTION_DAYS=365
AGGREGATED_DATA_RETENTION_DAYS=1825  # 5 years
