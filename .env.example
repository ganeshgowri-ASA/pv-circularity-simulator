# PV Circularity Simulator - Environment Configuration

# Application
APP_NAME=pv-circularity-simulator
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Roboflow API
ROBOFLOW_API_KEY=your_roboflow_api_key_here
ROBOFLOW_WORKSPACE=your_workspace_name
ROBOFLOW_PROJECT=pv-defect-detection
ROBOFLOW_MODEL_VERSION=1

# Database
DATABASE_URL=sqlite:///./pv_simulator.db
# For PostgreSQL: postgresql://user:password@localhost:5432/pv_simulator

# Email Notifications (SMTP)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@pv-simulator.com
SMTP_FROM_NAME=PV Simulator Alerts

# Twilio (SMS)
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

# SendGrid (Email)
SENDGRID_ENABLED=false
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@pv-simulator.com

# Slack Webhooks
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Alert Configuration
ALERT_ENABLED=true
ALERT_MIN_SEVERITY=WARNING
ALERT_BATCH_WINDOW_SECONDS=300

# Monitoring
MONITORING_ENABLED=true
MONITORING_INTERVAL_SECONDS=60
DEFECT_DETECTION_ENABLED=true
ANOMALY_DETECTION_ENABLED=true

# Image Processing
IMAGE_MAX_SIZE_MB=10
IMAGE_ALLOWED_FORMATS=jpg,jpeg,png,tiff,bmp
IMAGE_DEFAULT_DPI=300

# Performance
MAX_WORKERS=4
BATCH_SIZE=32
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
